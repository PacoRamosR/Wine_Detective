<% provide(:title, "Edit user") %>


<div class="index-light-overlay">
  <div class="home-inner container pb-5 mb-5">
  <h1><%= t 'users.edit.アカウント設定' %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= t 'users.edit.名前' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= t 'users.edit.メールアドレス' %> 
      <%= f.email_field :email, class: 'form-control' %>

      <%= t 'users.edit.パスワード' %> 
      <%= f.password_field :password, class: 'form-control' %>

      <%= t 'users.edit.パスワード確認' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= t 'users.edit.プロファイル写真' %>
      <%= f.file_field :profile_picture,class: 'form-control', accept: 'image/jpeg,  image/png, image/jpg'%>

      <%= f.submit "Save changes", class: "btn btn-primary mt-3" %>
    <% end %>

  </div>
</div>
  </div>
</div>
