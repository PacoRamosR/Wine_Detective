<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <div class="user">
      <%= image_tag(@user.profile_picture) if @user.profile_picture.attached? %>
    </div>
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <h2>
        <%= @user.email %>
      </h2>
    </section>
  </aside>
</div>