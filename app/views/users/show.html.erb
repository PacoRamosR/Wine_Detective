<% provide(:title, @user.name) %>

<div class="index-light-overlay">
  <div class="home-inner container pb-5 mb-5">
<div class="row">
  <aside class="col-md-4">
    <div class="user">
      <%= image_tag(@user.avatar) if @user.avatar.attached? %>
    </div>
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <h2>
        <%= @user.email %>
      </h2>
    </section>
  </aside>
  <div class="col-md-8">
  <% if @user.microposts.any? %>
    <h3>レビュー (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= paginate @microposts %>
  <% end %>
</div>
</div>
</div>
</div>