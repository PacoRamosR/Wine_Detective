<% provide(:title, 'Sign up') %>

    <%= form_with(model: @user, local: true) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <div class="form-group">
      <%= f.text_field :name, class: 'form-control form-control-lg', placeholder: t('users.edit.名前') %>
      </div>

      <div class="form-group">
      <%= f.email_field :email, class: 'form-control form-control-lg', placeholder: t('users.edit.メールアドレス') %>
      </div>

      <div class="form-group">
      <%= f.password_field :password, class: 'form-control form-control-lg', placeholder: t('users.edit.パスワード') %>
      </div>

      <div class="form-group">
      <%= f.password_field :password_confirmation, class: 'form-control form-control-lg', placeholder: t('users.edit.パスワード確認') %>
      </div>

      <%= f.submit (t 'users.new.登録'), class: "btn btn-outline-light btn-block" %>
    <% end %>