<% provide(:title, "Log in") %>

  <div class="dark-overlay">
    <div class="home-inner container">
      <div class="row mt-5">
        <div class="col-md-6 col-md-offset-3 mt-5">
          <div class="card bg-secondary text-center card-form border border-rounded">
            <div class="card-body">
            <h1 class="display-1 ">ログイン</h1>
            <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

              <%= f.email_field :email, class: 'form-control mb-4', placeholder: 'メールアドレス' %>

              <%= f.password_field :password, class: 'form-control mb-4',  placeholder: 'パスワード' %> 

              <%= f.submit "ログイン", class: "btn btn-primary mb-3" %>
            <% end %>
            <p> <%= link_to "こちらで", signup_path %>登録をお願いします。</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>